@model IEnumerable<TiendaVirtual.Models.Factura>

@{
    ViewBag.Title = "Index";
    int numPedido = 0;
}

<div class="render_body">
    <h4>Aquí tiene sus facturas:</h4>
    <br />
    <table class="table">
        <tr>
            <th>
                Número de pedido
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio) del pedido
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            numPedido += 1;
            <tr>
                <td>
                    @numPedido
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio) €
                </td>
                <td>
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>

