@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav">
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Operaciones
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="/Productos">Gestionar productos</a></li>
                    <li><a href="/Categorias">Gestionar categorias</a></li>
                    <li><a href="#">Gestionar stock</a></li>
                </ul>
            </li>
            <li>
                @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right" style="margin-right: 5px">
        <li class="navbar-right"><a href="/Account/Register"><span class="glyphicon glyphicon-user"></span> Registrarse</a></li>
        <li class="navbar-right"><a href="/Account/Login"><span class="glyphicon glyphicon-log-in"></span> Iniciar sesion</a></li>
    </ul>
}
