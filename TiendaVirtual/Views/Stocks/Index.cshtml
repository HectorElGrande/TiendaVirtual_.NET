@model IEnumerable<TiendaVirtual.Models.Producto>

@{
    ViewBag.Title = "Index";
}

<div class="render_body">
    <h2>Productos a reponer</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.Imagen)" width="100px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td style="display:flex; flex-direction:row;">
                    <button type="button" class="btn btn-info" style="display:flex; justify-content:center; align-items:center; padding:5px; margin-right:10px;">
                        <a href="/Productos/Edit/@item.Id" style="text-decoration:none; border: none; display:flex; justify-content:center; align-items:center; color: white;">
                            <span class="material-icons" style="color: white;">
                                create
                            </span>
                        </a>
                    </button>
                    <button type="button" class="btn btn-warning" style="display:flex; justify-content:center; align-items:center; padding:5px; margin-right:10px;">
                        <a href="/Productos/Details/@item.Id" style="text-decoration:none; border: none; display:flex; justify-content:center; align-items:center; color: white;">
                            <span class="material-icons">
                                visibility
                            </span>
                        </a>
                    </button>
                    <button type="button" class="btn btn-danger" style="display:flex; justify-content:center; align-items:center; padding:5px;">
                        <a href="/Productos/Delete/@item.Id" style="text-decoration:none; border: none; display:flex; justify-content:center; align-items:center; color: white;">
                            <span class='material-icons'>
                                delete_forever
                            </span>
                        </a>
                    </button>



                </td>
            </tr>
        }

    </table>

</div>

