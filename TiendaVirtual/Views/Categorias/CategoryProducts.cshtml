@model IEnumerable<TiendaVirtual.Models.Producto>

@{
    ViewBag.Title = "CategoryProducts";
}

<h2>CategoryProducts</h2>

<div id="html-item-pagination" style="height: 700px;">
    @foreach (var item in Model)
    {
        <div class="hip-item">
            <div>
                <div class="thumbnail" style="height: 250px;">
                    <div class="caption text-center">
                        <div class="position-relative">
                            <img src="@Html.DisplayFor(modelItem => item.Imagen)" width="100px" />
                        </div>
                        <div class="hip-item">
                            <h4 id="thumbnail-label">@Html.ActionLink(item.Nombre, "CategoryProductsDetails", "Categorias", new { id = item.Id }, null)</h4>
                        </div>
                    </div>
                    <div class="caption card-footer text-center">
                        <ul class="list-inline">
                            <li><i class="people lighter"></i>&nbsp;Stock: @Html.DisplayFor(modelItem => item.Cantidad)</li>
                            <li></li>
                            <li><i class="glyphicon glyphicon-credit-card lighter"></i> @Html.DisplayFor(modelItem => item.Precio)€</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>